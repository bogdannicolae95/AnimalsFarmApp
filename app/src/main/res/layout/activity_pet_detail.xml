<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.PetDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/detail_activity_toolbar"/>

    <ImageView
        android:src="@drawable/rabbit"
        android:id="@+id/pet_photo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/revive_pet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="133dp"
            android:visibility="invisible"
            android:text="Revive Your Pet" />

    <ProgressBar
        android:layout_below="@id/toolbar"
        android:id="@+id/progressBar"
        android:layout_margin="20dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:progress="0" />

    <LinearLayout
        android:id="@+id/sleep_linear_layout"
        android:layout_below="@id/pet_photo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/sleep_button"
            android:layout_margin="20dp"
            android:layout_below="@id/progressBar"
            android:text="Sleep"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progressBar_Sleep"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/drink_linear_layout"
        android:layout_below="@id/sleep_linear_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Drink_button"
            android:layout_margin="20dp"
            android:layout_below="@id/progressBar"
            android:text="Drink"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progressBar_Drink"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/eat_linear_layout"
        android:layout_below="@id/drink_linear_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Eat_button"
            android:layout_margin="20dp"
            android:layout_below="@id/progressBar"
            android:text="Eat"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progressBar_Eat"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/play_linear_layout"
        android:layout_below="@id/eat_linear_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Play" />

        <ProgressBar
            android:id="@+id/progressBar_Play"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />

    </LinearLayout>

    <Button
        android:id="@+id/collect_button"
        android:text="COLLECT (0)"
        android:layout_below="@id/play_linear_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:minHeight="30dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </RelativeLayout>
</ScrollView>